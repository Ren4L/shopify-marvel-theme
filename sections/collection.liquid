{{ 'collection.css' | asset_url | stylesheet_tag }}

<div class="collection--container" >
  {% for product in section.settings.collection.products %}
    <div data-id="{{ product.id }}" style=" display:flex; flex-direction: column; align-items: center; font-size: 20px; border: 1px black solid; border-radius: 15px; padding: 15px; margin: 10px; ">
      <img src="{{product.images[0] | image_url: width: 128 }}">
      <h2>{{ product.title }}</h2>
      <p>{{ product.description }}</p>
      <p><b>{{ product.price }}$</b></p>
    </div>
  {% endfor %}
</div>

  {% schema %}
  {
    "name": "Collection",
    "tag": "section",
    "settings":[
      {
        "id":"collection",
        "type":"collection",
        "label":"Chose Collection"
      }
    ],
    "blocks":[
    ]
  }
  {% endschema %}