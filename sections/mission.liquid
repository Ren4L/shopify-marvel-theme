{{ 'mission.css' | asset_url | stylesheet_tag }}

<div class="mission--container" id="{{ section.settings.title }}">
  <h1>{{ section.settings.title }}</h1>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'block' %}
        <div class="mission--image--text--container">
          <img src="{{ block.settings.image | image_url: width: 400}}" alt="Mission">
          <div class="text"><strong>{{ block.settings.bold }}</strong>{{ block.settings.text }}</div>
        </div>
    {% endcase %}
  {% endfor %}
  <div class="missions--container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'missions' %}
          <div class="mission--block">
            {{ block.settings.image | image_url: width: 72 | image_tag }}
            <div class="title">{{ block.settings.title }}</div>
            <div class="content">{{ block.settings.content }}</div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Mission",
  "tag": "section",
  "settings":[
    {
      "type": "text",
      "id": "title",
      "label": "Title section",
      "default": "Mission"
    }
  ],
  "blocks":[
    {
      "type": "block",
      "name": "Mission content",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "bold",
          "label": "Bold text"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "name": "Missions",
      "type": "missions",
      "limit": 5,
      "settings":[
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ]
}
{% endschema %}
