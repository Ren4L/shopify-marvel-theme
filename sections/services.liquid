{{ 'services.css' | asset_url | stylesheet_tag }}

<div class="services--container">
  <h1>{{ section.settings.title }}</h1>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'paragraph1' %}
        <div class="paragraph1">{{ block.settings.paragraph1 }}</div>
    {% endcase %}
  {% endfor %}
  <div class="services--blocks--container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'block' %}
          <div class="service--block">
            <div class="title">{{ block.settings.title }}</div>
            <div class="points">{{ block.settings.points }}</div>
            <img src="{{ 'arrow.svg' | asset_url }}" width="50px" alt="Arrow">
          </div>
      {% endcase %}
    {% endfor %}
  </div>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'paragraph2' %}
        <div class="paragraph2">{{ block.settings.paragraph2 }}</div>
    {% endcase %}
  {% endfor %}
  <svg class="section--menu" width="121" height="209" viewBox="0 0 121 209" fill="none" xmlns="http://www.w3.org/2000/svg">
    <text fill="#0B0D21" xml:space="preserve" style="white-space: pre" font-family="Sofia Pro" font-size="10" letter-spacing="0px"><tspan x="81.8672" y="10.9668">01</tspan></text>
    <rect width="1" height="20" transform="matrix(0 -1 -1 0 121 8)" fill="#0B0D21"/>
    <text fill="#0B0D21" xml:space="preserve" style="white-space: pre" font-family="Sofia Pro" font-size="10" letter-spacing="0px"><tspan x="81.8672" y="126.967">04</tspan></text>
    <rect width="1" height="20" transform="matrix(0 -1 -1 0 121 124)" fill="#0B0D21"/>
    <text fill="#0B0D21" xml:space="preserve" style="white-space: pre" font-family="Sofia Pro" font-size="10" letter-spacing="0px"><tspan x="81.8672" y="165.967">05</tspan></text>
    <rect width="1" height="20" transform="matrix(0 -1 -1 0 121 163)" fill="#0B0D21"/>
    <text fill="#0B0D21" xml:space="preserve" style="white-space: pre" font-family="Sofia Pro" font-size="10" letter-spacing="0px"><tspan x="81.8672" y="204.967">06</tspan></text>
    <rect width="1" height="20" transform="matrix(0 -1 -1 0 121 202)" fill="#0B0D21"/>
    <text fill="#0B0D21" xml:space="preserve" style="white-space: pre" font-family="Sofia Pro" font-size="10" letter-spacing="0px"><tspan x="81.8672" y="49.9668">02</tspan></text>
    <rect width="1" height="20" transform="matrix(0 -1 -1 0 121 47)" fill="#0B0D21"/>
    <text fill="#0B0D21" xml:space="preserve" style="white-space: pre" font-family="Sofia Pro" font-size="10" letter-spacing="0px"><tspan x="0.724609" y="88.9668">03 {{ section.settings.title }}</tspan></text>
    <rect width="1" height="60" transform="matrix(0 -1 -1 0 121 85.5)" fill="#0B0D21"/>
  </svg>
</div>

{% schema %}
{
  "name": "Services",
  "tag": "section",
  "settings":[
    {
      "type": "text",
      "id": "title",
      "label": "Title section",
      "default": "Services"
    }
  ],
  "blocks":[
    {
      "type": "paragraph1",
      "name": "Paragraph 1",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "paragraph1",
          "label": "Paragraph 1"
        }
      ]
    },
    {
      "type": "block",
      "name": "Services",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "points",
          "label": "Points"
        }
      ]
    },
    {
      "type": "paragraph2",
      "name": "Paragraph 2",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "paragraph2",
          "label": "Paragraph 2"
        }
      ]
    }
  ]
}
{% endschema %}
